script#temp-tags(type='kissy/template')
  |<ul class='tags'>
  |  {{#each tags as tag}}
  |    <li><a class='tag' title='点击添加标签' href='/list?tag={{tag}}'>{{tag}}</a></li>
  |  {{/each}}
  |</ul>
script#temp-errors(type='text/template')
  |{{#each errors as err}}
  |<div class='alert-message warning'>
  |<p>{{err.type}}</p>
  |</div>
  |{{/each}}

form.ajax-form(action=isNew?'/share/':'/share/#{share._id}', method=isNew?"post":"put")
  .error-holder
  input(type='hidden',name='shareset', value=share.shareset)
  fieldset
    legend= title
    .clearfix
      label(for="title") 分享标题
      .input
        input.text#input_title(name="title",value=share.title)
        span.help-inline

    .clearfix
      label(for="authers") 分享者
      - each author in share.authors
        .input
          input.span2(name="authors",value=author)
          span.help-inline
    .clearfix
      label(for="tags", title='(逗号或空格分开)') 标签
      .input
        input.xxlarge#tags(name="tags",value=share.tags.join(', '))
        span.help-inline 可以用逗号, 或空格分格
        .tags#tagfield
    //.clearfix
      .input
        input#cover(name='cover',type='file')
        span.help-block= share.cover
    .clearfix
      label(for='desc') 介绍
      .input
        textarea.xxlarge(name='desc',row='3')= share.desc
        span.help-inline
    .actions
      button.btn.primary(type="submit")  修改
      |  
      a.btn(href='/shareset/#{shareset.postname}') 返回

