li.shareitem
  .cover(style='background-image:url(#{shares[indexInCollection].cover})')
  .cnt
    .wrap
      h3.title
        a(href='/share/#{shares[indexInCollection]._id}') #{shares[indexInCollection].title}
      div.desc=shares[indexInCollection].desc.substr(0, 40);
      .act
        span.author
          #{shares[indexInCollection].authors.join(', ')}
