script#temp-tags(type='kissy/template')
  |<ul class='tags'>
  |  {{#each tags as tag}}
  |    <li><a class='tag' href='/list?tag={{tag}}'>{{tag}}</a></li>
  |  {{/each}}
  |</ul>
h1= shareset.subject
form(action='/add-share/#{shareset._id}', method="post")
  input(type='hidden',value=setId)
  - if('undefined' !== typeof errors && errors)
    .alert-message.block-message.warning
      a.close(href='#') ×
      ul.errors
        - each err in errors
          li.error= err.type
  fieldset
    legend  创建分享
    .clearfix
      label(for="title") 分享标题
      .input
        input.text#input_title(name="title",value=share.title)
    .clearfix
      label(for="authers") 分享者
      - if(share.authors.length)
        - each author in share.authors
          .input
            input.text#input_user(name="authors",value=author)
    .clearfix
      label(for="tag", title='(逗号或空格分格)') 标签
      .input
        input.text#input_tags(name="tags",value=share.tags.join(' '))
        .tags#tagfield
    .clearfix
      label(for='desc') 介绍
      .input
        textarea.xxlarge(name='desc')= share.desc
    .actions
      button.btn.primary(type="submit")  创建分享
      |  
      a.btn(href='/shareset/shareset._id') 返回

script
