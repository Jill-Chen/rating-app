- var tab = (typeof navtab === 'undefined') ? "" : navtab;
!!! 5
html
  head
    title= title
    - if(debug)
      link(rel='stylesheet/less', href='/css/share.less')
      script(src='/lib/less/1.1.3/less.min.js')
    - else
      link(rel='stylesheet', href='/css/share.css')
    meta(name='viewport',content='width=device-width, initial-scale = 1.0, user-scalable = no')
  -if(typeof css !== "undefined" )
    -if(css=="rate")
      link(rel='stylesheet', href='/stylesheets/rate2.css')
  script(src='http://a.tbcdn.cn/s/kissy/1.2.0/kissy.js')
  script
    KISSY.config({
      packages : [{
        name : 'rate',
        path : '/js'
        }]
      });
    KISSY.use('rate/app');
  body
  div.topbar(data-dropdown='dropdown')
    div.topbar-inner
      .container
        h3
          a.brand(href='/')  分享平台
        ul.nav
          li(class=(tab ==='home')?'active':'')
            a(href="/") 首页
          li(class=(tab ==='shareset')?'active':'')
            a(href="/shareset/") 分享会
          li(class=(tab ==='share')?'active':'')
            a(href="/share") 分享
          li(class=(tab ==='create')?'active':'')
            a(href='/shareset/new') 组织分享会
        ul.nav.secondary-nav
          li(class=(tab ==='feedback')?'active':'')
            a(href='/feedback') 反馈
          - if(!everyauth.loggedIn)
            li
              a.login-url(href='/login?redirect={url}') 登录
            li
              a.login-url(href='/register?redirect={url}') 注册
          - else
            li.dropdown
              a.dropdown-toggle(href='#')= user.email
              ul.dropdown-menu
                li
                  a(href='/logout') 退出
  div#main.container!= body
  div.footer

  script(src="/lib/jquery/1.6.4/jquery.min.js")
  script(src="/bootstrap/js/bootstrap-dropdown.js")
  script(src="/bootstrap/js/bootstrap-modal.js")
  script(src="/bootstrap/js/bootstrap-alerts.js")
