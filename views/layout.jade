!!! 5
html
  head
    title= title
    link(rel='stylesheet/less', href='/bootstrap/lib/bootstrap.less')
    script(src='/lib/less/1.1.3/less.min.js')
    meta(name='viewport',content='width = device-width')
    meta(name='viewport',content='initial-scale = 1.0, user-scalable = no')
  -if(typeof css !== "undefined" )
    -if(css=="rate")
      link(rel='stylesheet', href='/stylesheets/rate2.css')
  script(src='/js/kissy-min.js')
  script(src='/js/template-pkg-min.js')
  script(src='/js/rate/app.js')
  script
    KISSY.config({
      packages : [{
        name : 'rate',
        path : '/js'
        }]
      });
    KISSY.Config.debug = true;
  body
  div.topbar(data-dropdown='dropdown')
    div.topbar-inner
      .container
        h3
          a.brand(href='#')  分享平台
        ul.nav
          li(id='nav-home')
            a(href="/") 首页
          li(id='nav-list')
            a(href="/list") 所有分享
          - if(everyauth.loggedIn)
            li(id='nav-list')
              a(href="/list") 我的分享
            li#nav-create
              a(href='/create') 新建分享

          li(id='nav-tags')
            a(href="/tags") 根据标签
        ul.nav.secondary-nav
          - if(!everyauth.loggedIn)
            li.dropdown
              a.dropdown-toggle(href='/login') 未登录
              ul.dropdown-menu
                li
                  a(href='/login') 登录
                li
                  a(href='/register')  注册
          - else
            li.dropdown
              a.dropdown-toggle(href='#', name= JSON.stringify(everyauth)) 已登录
              ul.dropdown-menu
                li
                  a(href='/logout') 退出
  div.container!= body
  div.footer
  script(src="/lib/jquery/1.6.4/jquery.min.js")
  script(src="/bootstrap/js/bootstrap-dropdown.js")
