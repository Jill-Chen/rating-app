html
  head
    title= title
    link(rel='stylesheet/less', href='/css/share.less')
    script(src='/lib/less/1.1.3/less.min.js')
    link(href='http://fonts.googleapis.com/css?family=Days+One',rel='stylesheet')
    meta(name='viewport',content='width=device-width, initial-scale = 1.0, user-scalable = no')
  -if(typeof css !== "undefined" )
    -if(css=="rate")
      link(rel='stylesheet', href='/stylesheets/rate2.css')
  script(src='http://a.tbcdn.cn/s/kissy/1.2.0/kissy.js')
  script
    KISSY.config({
      packages : [{
        name : 'rate',
        path : '/js'
        }]
      });
  body
  div.topbar(data-dropdown='dropdown')
    div.topbar-inner
      .container
        h3
          a.brand(href='/')  分享平台
        ul.nav
          li(id='nav-home')
            a(href="/") 首页
          li(id='nav-setlist')
            a(href="/shareset/") 分享会
          li(id='nav-list')
            a(href="/share") 分享
          li#nav-create
            a(href='/shareset/new') 组织分享会
        ul.nav.secondary-nav
          - if(!everyauth.loggedIn)
            li.dropdown
              a.dropdown-toggle(href='/login') 未登录
              ul.dropdown-menu
                li
                  a(href='/login') 登录
                li
                  a(href='/register')  注册
          - else
            li.dropdown
              a.dropdown-toggle(href='#')= user.login
              ul.dropdown-menu
                li
                  a(href='/logout') 退出
  div#main.container!= body
  div.footer
  script(src="/lib/jquery/1.6.4/jquery.min.js")
  script(src="/bootstrap/js/bootstrap-dropdown.js")
  script(src="/bootstrap/js/bootstrap-modal.js")
