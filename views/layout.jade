- var tab = (typeof navtab === 'undefined') ? "" : navtab;
!!! 5
html
  head
    title= title
    meta(name='viewport',content='width=device-width, initial-scale = 1.0, user-scalable = no')
    - if(developmod )
      link(rel='stylesheet/less', href='/css/share.less')
      script(src='/lib/less/1.1.3/less.min.js')
    - else
      link(rel='stylesheet', href='/css/share.css')
    script(src='/js/modules/seajs/1.1.1/sea.js',data-main='/js/main.js')
    - if(title !== '日历')
      script(src='http://a.tbcdn.cn/s/kissy/1.2.0/kissy.js')
      script
        KISSY.config({
          packages : [{
            name : 'rate',
            path : '/js'
            }]
          });
        KISSY.use('rate/app');

  body
  div.topbar(data-dropdown='dropdown')
    div.topbar-inner
      .container
        h3
          a.brand(href='/')  分享平台
        ul.nav
          li(class=(tab ==='home')?'active':'')
            a(href="/") 首页
          li(class=(tab ==='shareset')?'active':'')
            a(href="/calendar/") 分享会
          li(class=(tab ==='share')?'active':'')
            a(href="/share") 分享
          li(class=(tab ==='create')?'active':'')
            a(href='/shareset/new') 组织分享会
        ul.nav.secondary-nav
          li(class=(tab ==='feedback')?'active':'')
            a(href='/feedback') 反馈
          - if(!everyauth.loggedIn)
            li
              a.login-url(href='/login?redirect={url}') 登录
            li
              a.login-url(href='/register?redirect={url}',title='想要组织分享，先来注册一个吧') 注册
          - else
            li.dropdown
              a.dropdown-toggle(href='#')= user.email
              ul.dropdown-menu
                li
                  a(href='/logout') 退出
  div#main.container!= body
  div.footer
  script
    seajs.use("/js/base/dropdown.js")

  - if(tab === 'user')
    script(src="/bootstrap/js/bootstrap-alerts.js")
